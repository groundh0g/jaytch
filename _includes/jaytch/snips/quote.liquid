{% assign quoteText = include.quote | default: page.quote | default: "There's no quote on this page. -- Anonymous" %}

{% assign floatStyle = "" %}
{% if include.float %}
  {% assign floatStyle = "float:" | append: include.float | append: ";" %}
{% endif %}

{% assign count = quoteText | split: "--" | size %}
{% if count > 1 %}
  {% assign quoteText = quoteText | append: "</span>" | replace: "--", "<br/><span class='author'>&mdash; "" %}
{% endif %}
{% assign quoteWidth=include.width | default: "100%" %}

{% if quoteWidth == "100%" %}
  <div class="quote"><i class="fa fa-quote-left"></i>&nbsp;{{ quoteText }}</div>
{% else %}
  <div class="quote" style="{{ floatStyle }} width:{{ quoteWidth }}"><i class="fa fa-quote-left"></i>&nbsp;{{ quoteText }}</div>
{% endif %}