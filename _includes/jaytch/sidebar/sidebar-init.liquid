{% assign leftCols  = site.jaytch.template[site.jaytch.template.provider].sidebar_left.columns | default: 3 %}
{% assign rightCols = site.jaytch.template[site.jaytch.template.provider].sidebar_right.columns | default: 3 %}

{% if site.jaytch.layout.template[site.jaytch.layout.template.provider].sidebar_left.sidebars == false %}{% assign leftCols = 0 %}{% endif %}
{% if site.jaytch.layout.template[site.jaytch.layout.template.provider].sidebar_right.sidebars == false %}{% assign rightCols = 0 %}{% endif %}

{% if include.context == "page" %}
    {% if site.jaytch.layout.template[site.jaytch.layout.template.provider].sidebar_left.hideForPage == true %}{% assign leftCols = 0 %}{% endif %}
    {% if site.jaytch.layout.template[site.jaytch.layout.template.provider].sidebar_right.hideForPage == true %}{% assign rightCols = 0 %}{% endif %}
{% else %}
    {% if site.jaytch.layout.template[site.jaytch.layout.template.provider].sidebar_left.hideForPost == true %}{% assign leftCols = 0 %}{% endif %}
    {% if site.jaytch.layout.template[site.jaytch.layout.template.provider].sidebar_right.hideForPost == true %}{% assign rightCols = 0 %}{% endif %}
{% endif %}

{% if page.hideSidebars == true %}{% assign leftCols = 0 %}{% assign rightCols = 0 %}{% endif %}
{% if page.hideSidebarLeft == true %}{% assign leftCols = 0 %}{% endif %}
{% if page.hideSidebarRight == true %}{% assign rightCols = 0 %}{% endif %}

{% assign contentCols = 12 | minus: leftCols | minus: rightCols %}
